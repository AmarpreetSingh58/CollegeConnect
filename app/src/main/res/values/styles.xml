<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="RegisterAsTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Animation.MyAwesomeAnimation</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TeacherSelectCollegeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorRegisterAsTeacher</item>
        <item name="colorPrimaryDark">@color/colorRegisterAsTeacherDark</item>
        <item name="colorAccent">@color/colorRegisterAsTeacher</item>
    </style>

    <style name="StudentSelectCollegeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorRegisterAsStudent</item>
        <item name="colorPrimaryDark">@color/colorRegisterAsStudentDark</item>
        <item name="colorAccent">@color/colorRegisterAsStudent</item>
    </style>

    <style name="TeacherSignInTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorRegisterAsTeacher</item>
        <item name="colorPrimaryDark">@color/colorRegisterAsTeacherDark</item>
        <item name="colorButtonNormal">@color/colorRegisterAsTeacher</item>
        <item name="colorControlActivated">@color/colorRegisterAsTeacher</item>
        <item name="android:textColor">@color/colorRegisterAsTeacher</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyAwesomeAnimation</item>
    </style>

    <style name="StudentSignInTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorRegisterAsStudent</item>
        <item name="colorPrimaryDark">@color/colorRegisterAsStudentDark</item>
        <item name="colorButtonNormal">@color/colorRegisterAsStudent</item>
        <item name="colorControlActivated">@color/colorRegisterAsStudent</item>
        <item name="android:textColor">@color/colorRegisterAsStudent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyAwesomeAnimation</item>
    </style>

    <style name="FirebaseUI.AuthMethodPicker.Logo">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Animation" />

    <style name="Animation.MyAwesomeAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>

</resources>
